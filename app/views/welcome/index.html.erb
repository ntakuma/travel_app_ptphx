<h1>Welcome to my Travel Site</h1>

<div>
<p>Stay tuned for cool travel stuff!</p>
</div>

<h2>My homestate is <%= @homestate %></h2>

<ul>
  <% @countries.each do |country| %>
    <li>
      <%= country.titleize %>
      <br>
      <%= image_tag country, alt: "Flag of the country #{country}", class: 'flag' %>
    </li>
  <% end %>
</ul>

<div>
  <% @images.each do |image| %>
    <%= image_tag image, class: 'img-responsive' %>
  <% end %>
</div>

<table class="table">
  <tr>
    <% @united_states.each do |key,value| %>
	  <th><%= key.titleize %></th>
    <% end %>
  </tr>
  <tr>
    <% @united_states.each do |key,value| %>      
      <% if value.kind_of?(Array) %>
          <td><%= value.join(", ") %></td>
      <% else %>
         <td><%= value %></td>
      <% end %> 
    <% end %>
  </tr>
</table>
